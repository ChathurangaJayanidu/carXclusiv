<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carxclusv.chathurangaj.carxclusv">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultList"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carxclusv.chathurangaj.carxclusv.MainActivity" />
        </activity>
        <activity
            android:name=".ViewCar"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carxclusv.chathurangaj.carxclusv.ResultList" />
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ResultList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carxclusv.chathurangaj.carxclusv.ResultList" />
        </activity>
        <activity
            android:name=".MainActivity2"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultList2"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity2"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carxclusv.chathurangaj.carxclusv.MainActivity2" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carxclusv.chathurangaj.carxclusv.MainActivity2" />
        </activity>
        <activity
            android:name=".CarNewsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity2"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carxclusv.chathurangaj.carxclusv.MainActivity2" />
        </activity>
        <activity android:name=".PhotoSearchActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WebViewCar" />
        <activity android:name=".FilterResultActivity" />
        <activity android:name=".WishListActivity" />
        <activity android:name=".AddADActivity"></activity>
    </application>

</manifest>
